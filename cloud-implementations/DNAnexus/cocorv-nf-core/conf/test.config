/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/rarevariantburden -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

def caseRoot = params.pipelines_testdata_base_path + "rarevariantburden/case"

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed

    // case files
    caseJointVCF="${caseRoot}/samples.1KG.chr21-22.vcf.gz"
    caseSample="${caseRoot}/samples.txt"

    //gnomAD files
    controlDataFolder = params.pipelines_testdata_base_path + "rarevariantburden/control"

    //annotation
    annovarFolder = "NA"
    vepFolder = "NA"

    // reference
    build="GRCh37" // GRCh37 for gnomAD v2 or GRCh38 for gnomAD v4
    gnomADVersion="v2exome"
    chrSet="21 22"

    // CoCoRV setting
    caseAnnotatedVCFFileList="${caseRoot}/annotationFiles.csv"

    caseAnnotationGDSFileList="${caseRoot}/annotationGDSFiles.csv"

    caseGenotypeGDSFileList="${caseRoot}/genotypeGDSFiles.csv"

    casePopulation="${caseRoot}/casePopulation.txt"
}
